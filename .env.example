# TradeCore Configuration
# Copy this file to .env and fill in your values

# Binance API Credentials (required for live trading)
API_KEY=your_binance_api_key_here
SECRET_KEY=your_binance_secret_key_here

# Server Configuration
PORT=8080

# Mock Mode (default: true for safety)
# Set to "false" to enable live trading
MOCK_MODE=true

# State Persistence
# Path to the JSON file for saving bot state
STATE_FILE=./state.json

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info
